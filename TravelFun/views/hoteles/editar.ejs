<% include ../layouts/cabecera.ejs %> 
<form method="post" action="../actualizar/" enctype="multipart/form-data">
    

    <input type="text" name="Id_Hotel" value="<%=hotel.Id_Hotel%> ">


    <div class="form-group">
        <label for="my-input">Nombre</label>
        <input id="my-input" value="<%=hotel.Nombre_Hotel%>" class="form-control" type="text" name="nombre">
    </div>

    <div class="form-group">
        <label for="my-input">Imagen</label>
        <img class="img-thumbnail" src="../../images/<%=hotel.imagen%>" width="100" alt="">
        <input id="my-input" class="form-control-file" type="file" name="archivo">
    </div>

    <div class="form-group">
        <label for="my-input">Precio</label>
        <input id="my-input" value="<%=hotel.Precio%>" class="form-control" type="text" name="precio">
    </div>

    <button class="btn btn-primary" type="submit">Guardar</button>
</form>
