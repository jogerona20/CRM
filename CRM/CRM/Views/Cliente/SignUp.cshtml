@model CRM.Models.DTO.SignUpModel


<div class="container mt-4">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                    <div class="modal" id="Successmodal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content text-center" style="background-color: #d1e7dd; ">
                                <div class="modal-header">
                                    <h5 class="modal-title">Message</h5>
                                </div>
                                <div class="modal-body">
                                    <p id="Pmessage"><b>DATA SAVED SUCCESFULLY</b></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal" id="Errormodal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content text-center" style="background-color: #f8d7da;">
                                <div class="modal-header">
                                    <h5 class="modal-title">Message</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p id="PmessageError"><b>ERROR, DATA NOT SAVED</b></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="text-center h3 fw-bold mb-3 mx-1 mx-md-4 mt-5">Sign up</p>
                    <form class="mx-1 mx-md-4" asp-action="SignUp">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                                <input asp-for="NombreCompleto" type="text" id="txtFullName" class="form-control" />
                                <label asp-for="NombreCompleto" class="form-label" for="txtFullName">Your Full Name</label>
                                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                                <input asp-for="Correo" type="email" id="txtEmail" class="form-control" />
                                <label asp-for="Correo" class="form-label" for="txtEmail" type="email">Your Email</label>
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                                <input asp-for="Direccion" type="text" id="txtDireccion" class="form-control" />
                                <label asp-for="Direccion" class="form-label" for="txtDireccion">Your Address</label>
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                                <input asp-for="Password" type="password" id="txtPassword" class="form-control" />
                                <label asp-for="Password" class="form-label" for="txtPassword">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mb-3">
                            <div class="form-outline flex-fill mb-0">
                                <input asp-for="ConfirmPassword" type="password" id="txtPassword" class="form-control" />
                                <label asp-for="ConfirmPassword" class="form-label" for="txtPassword">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-lg-4">
                            <button class="btn btn-primary btn-lg" type="submit" value="Signup">Register</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                    <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png" class="img-fluid" alt="Sample image">
                </div>
            </div>
        </div>
    </div>
</div>

