@model CRM.Domain.Empleado
@inject Microsoft.AspNetCore.Identity.SignInManager<CRM.Domain.Cliente> _signInManager


@if (!_signInManager.IsSignedIn(User))
{
    @Url.Action("Index", "Producto");
}
else
{

    <div>
        <div class="row d-flex justify-content-center h-100">
                <div class="row justify-content-center">
                        <p class="text-center h3 fw-bold mb-3 mx-1 mx-md-4">Registrar Empleado</p>
                        <form class="mx-1 mx-md-4 col-12 mt-3" asp-action="PrintNomina" asp-controller="Empleado">
                            <div class="row">
                                <div class="col-5 mr-lg-5 mt-2">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="NombreCompleto" type="text" class="form-control" />
                                            <label asp-for="NombreCompleto" class="form-label">Nombre Completo</label>
                                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="RFC" type="text" class="form-control" />
                                            <label asp-for="RFC" class="form-label">RFC</label>
                                            <span asp-validation-for="RFC" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-2">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Direccion" type="text" class="form-control" />
                                            <label asp-for="Direccion" class="form-label">Dirección</label>
                                            <span asp-validation-for="Direccion" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-2">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="SueldoBase" type="number" class="form-control col-2" />
                                        <label asp-for="SueldoBase" class="form-label">Sueldo Base</label>
                                        <span asp-validation-for="SueldoBase" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-2">
                                    <div class="form-outline flex-fill mb-0">
                                        <div class="form-check form-switch">
                                            <input asp-for="CreditoInfonavit" class="form-check-input" checked type="checkbox">
                                            <label asp-for="CreditoInfonavit" form-check-label">Credito Infonavit</label>
                                            <span asp-validation-for="CreditoInfonavit" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-2">
                                    <div class="form-outline flex-fill mb-0">
                                        <input asp-for="DescuentoInfonavit" type="number" class="form-control col-2" />
                                        <label asp-for="DescuentoInfonavit" class="form-label">Cantidad a descontar</label>
                                        <span asp-validation-for="DescuentoInfonavit" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="d-flex mx-4 mb-lg-4">
                                    <button class="btn btn-primary btn-lg" type="submit" value="PrintNomina">Register</button>
                                </div>
</form>
                </div>
        </div>
    </div>


}

